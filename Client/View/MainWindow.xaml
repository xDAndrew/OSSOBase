<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Условные установки" 
        Width="800" Height="600"
        MinWidth="800" MinHeight="600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top" Height="24"/>
            <ToolBar DockPanel.Dock="Top" Height="30" Width="Auto" HorizontalAlignment="Left">
                <Button Width="24" Height="24" Command="{Binding AddCard}"/>
                <Button Width="24" Height="24" Command="{Binding EditCard}"/>
                <Separator/>
                <Button Width="24" Height="24" />
            </ToolBar>
            <StatusBar DockPanel.Dock="Bottom" Height="24"/>

            <DataGrid AutoGenerateColumns="False" IsReadOnly="True" CanUserResizeColumns="False" CanUserReorderColumns="False" CanUserResizeRows="False" AlternatingRowBackground="LightGreen" ItemsSource="{Binding Cards}"
                      SelectedItem="{Binding SelectedItem}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Заказчик" Width="*" CanUserResize="False" Binding="{Binding Owner}"/>
                    <DataGridTextColumn Header="Объект" Width="*" CanUserResize="False" Binding="{Binding ObjectView}"/>
                    <DataGridTextColumn Header="Адрес" Width="*" CanUserResize="False" Binding="{Binding Address}"/>
                    <DataGridTextColumn Header="У.У." Width="50" CanUserResize="False" Binding="{Binding UU}"/>
                    <DataGridTextColumn Header="ПКП" Width="120" CanUserResize="False" Binding="{Binding PKP}"/>
                </DataGrid.Columns>
            </DataGrid> 
            
        </DockPanel>
    </Grid>
</Window>
