<Window x:Class="Client.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" 
        Width="200"
        Height="175"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label VerticalAlignment="Top" Content="Пользователь" Margin="4, 0"/>
        <ComboBox Width="170" Height="22" HorizontalAlignment="Center" VerticalAlignment="Bottom" ItemsSource="{Binding Users}" SelectedItem="{Binding SelectedUser}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Path=Name}" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Label Grid.Row="1" VerticalAlignment="Top" Content="Пароль" Margin="4, 0"/>
        <TextBox Grid.Row="1" Width="170" Height="22" HorizontalAlignment="Center" VerticalAlignment="Bottom" Text="{Binding UserPassword}"/>
       
        <Button Grid.Row="2" Width="120" Height="22" Content="Войти" Command="{Binding Login}"/>
    </Grid>
</Window>
